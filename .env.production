# Production environment variables for Render
# These will be automatically set by render.yaml

# Flask Configuration
FLASK_ENV=production
SECRET_KEY=your_production_secret_key_here

# Database Configuration (PostgreSQL on Render)
# These will be automatically populated from render.yaml
DATABASE_URL=postgresql://library_user:password@host:5432/librarys_management_system
DB_HOST=host
DB_USER=library_user
DB_PASSWORD=password
DB_NAME=librarys_management_system

# Security
SECURITY_PASSWORD_SALT=your_production_salt_here

# Email Configuration (optional)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=true
MAIL_USERNAME=your_email@gmail.com
MAIL_PASSWORD=your_app_password
